{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Stockholm",
  "commitMessagePrefix": "Renovate/",
  "commitMessageTopic": "{{depName}}",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate",
  "labels": [
    "kind/update",
    "renovate"
  ],
  "ignorePaths": [
    ".vscode/",
    "studies/",
    "workshops"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDepNames": [
        "immich",
        "cilium",
        "k3s"
      ],
      "automerge": false
    }
  ],
  "bumpVersions": [
    {
      "file": "Chart.yaml",
      "field": "version",
      "bump": "patch"
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/manifests/.+\\.yaml/"
    ]
  }
}
